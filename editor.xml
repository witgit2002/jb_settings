<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="32" />
    <option name="FONT_FAMILY" value="DejaVuSansMono Nerd Font" />
    <option name="FONT_SCALE" value="2.0" />
  </component>
  <component name="EditorSettings">
    <option name="USE_SOFT_WRAPS" value="MAIN_EDITOR:CONSOLE" />
    <option name="USE_CUSTOM_SOFT_WRAP_INDENT" value="true" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\btodo\b.*" />
    <pattern pattern="\bfixme\b.*" />
    <pattern case-sensitive="true" pattern="VIAN" />
    <filter name="VIAN">
      <pattern index="2" />
    </filter>
  </component>
</application>